<div class="col-md-12">
  <h2 class="text-center">我发表过的文章</h2>

  <table class="table table-hover">
    <thead>
      <tr>
        <td>Content</td>
        <td>Group Name</td>
        <td>Last Update</td>
        <td colspan="2" ></td>
      </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>

      <tr>
        <td><%= post.content %></td>
        <td><%= post.group.title %></td>
        <td><%= post.updated_at%></td>
        <td>
        <%= link_to("Edit", edit_group_post_path(post.group, post), class: "btn btn-primary btn-xs")%>
        <%= link_to("Delete", group_post_path(post.group, post), method: :delete, class: "btn btn-primary btn-xs") %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
